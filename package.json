{
  "name": "blueprintui",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "author": "Crylan Software",
  "license": "",
  "workspaces": [
    "docs",
    "packages/components",
    "packages/icons",
    "packages/layout/lib",
    "packages/themes",
    "packages/typography"
  ],
  "scripts": {
    "ci": "WIREIT_PARALLEL=1 npm run _ci",
    "lint": "wireit",
    "lint:fix": "wireit",
    "build": "wireit",
    "test": "wireit",
    "clean": "git clean -dfX",
    "_ci": "wireit"
  },
  "wireit": {
    "_ci": {
      "dependencies": [
        "lint",
        "build",
        "test"
      ]
    },
    "lint": {
      "command": "eslint \"./**/*.ts\" && stylelint --config \"./stylelint.config.cjs\" \"./**/*.css\"",
      "files": [
        "./**/*.js",
        "./**/*.ts",
        "./**/*.css"
      ],
      "output": []
    },
    "lint:fix": {
      "command": "eslint --fix \"./**/*.ts\" && stylelint --fix \"./**/*.css\"",
      "files": [
        "./src/**/*"
      ],
      "output": []
    },
    "build": {
      "dependencies": [
        "./docs:build",
        "./packages/components:build",
        "./packages/icons:build",
        "./packages/layout:build",
        "./packages/themes:build",
        "./packages/typography:build"
      ]
    },
    "test": {
      "dependencies": [
        "./docs:ci",
        "./packages/components:test",
        "./packages/icons:test",
        "./packages/layout:test",
        "./packages/themes:test",
        "./packages/typography:test"
      ]
    }
  },
  "overrides": {
    "rollup-plugin-styles": {
      "rollup": "^3.4.0"
    },
    "rollup-plugin-import-assert": {
      "rollup": "^3.4.0"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jasmine": "4.1.3",
    "eslint-plugin-lit": "1.6.1",
    "eslint-plugin-lit-a11y": "2.3.0",
    "eslint-plugin-rulesdir": "0.2.1",
    "eslint-plugin-wc": "1.4.0",
    "husky": "^8.0.2",
    "stylelint": "14.12.0",
    "stylelint-config-standard": "26.0.0",
    "stylelint-no-px": "1.0.1",
    "typescript": "4.7.4",
    "wireit": "^0.8.0"
  }
}
