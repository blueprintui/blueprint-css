{
  "name": "@blueprintui/crane-project",
  "version": "0.0.0",
  "type": "module",
  "types": "./index.d.ts",
  "customElements": "./custom-elements.json",
  "license": "MIT",
  "author": "Crylan Software",
  "homepage": "https://blueprintui.dev/crane",
  "description": "Simple and lightweight drag and drop components and utilities.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blueprintui/blueprintui.git"
  },
  "bugs": {
    "url": "https://github.com/blueprintui/blueprintui/issues"
  },
  "keywords": [
    "web components",
    "key navigation",
    "blueprintui"
  ],
  "scripts": {
    "ci": "wireit",
    "start": "wireit",
    "docs": "wireit",
    "build": "wireit",
    "build:watch": "wireit",
    "drafter": "wireit",
    "drafter:watch": "wireit",
    "test": "wireit",
    "test:watch": "wtr --watch",
    "_test:unit": "wireit",
    "_test:coverage": "wireit",
    "_test:a11y": "wireit",
    "_test:api": "wireit",
    "test:performance": "wireit",
    "api:update": "wireit",
    "sourcemap": "wireit",
    "publish": "wireit",
    "deploy": "wireit"
  },
  "wireit": {
    "ci": {
      "dependencies": ["build", "test", "test:performance"]
    },
    "start": {
      "dependencies": ["build:watch", "drafter:watch"]
    },
    "build": {
      "command": "bp build && cpy package.lib.json ./dist/lib --rename package.json",
      "dependencies": ["../typewriter:build"],
      "files": [
        "./src/**/*",
        "!./src/**/*.spec.ts",
        "!./src/**/*.performance.ts",
        "./blueprint.config.js",
        "./package.lib.json",
        "./package.json"
      ],
      "output": ["./dist/lib"]
    },
    "build:watch": {
      "command": "bp build --watch",
      "service": true,
      "dependencies": ["build"]
    },
    "docs": {
      "command": "cd docs && lite-server"
    },
    "drafter": {
      "command": "drafter build",
      "files": [
        "./src/**/*",
        "./blueprint.config.js",
        "./package.lib.json",
        "./package.json"
      ],
      "output": [
        "./dist/lib/drafter"
      ],
      "dependencies": [
        "build"
      ]
    },
    "drafter:watch": {
      "command": "drafter build --watch",
      "service": true,
      "dependencies": ["build"]
    },
    "test": {
      "dependencies": ["build", "_test:api", "_test:unit"]
    },
    "test:watch": {
      "command": "wtr --watch",
      "service": true
    },
    "_test:unit": {
      "command": "wtr",
      "files": ["./src/**/*", "./package.json", "./web-dev-server.config.mjs", "./web-test-runner.config.mjs"],
      "dependencies": ["build"],
      "output": []
    },
    "_test:coverage": {
      "command": "wtr --coverage",
      "files": ["./src/**/*", "./package.json"],
      "output": ["./dist/coverage"],
      "dependencies": ["build"]
    },
    "_test:a11y": {
      "command": "wtr --config ./web-test-runner.a11y.mjs",
      "files": ["./src/**/*", "./package.json", "./web-dev-server.config.mjs"],
      "dependencies": ["build"],
      "output": []
    },
    "test:performance": {
      "command": "wtr --config ./web-test-runner.performance.mjs",
      "files": ["./src/**/*", "./package.json", "./web-dev-server.config.mjs", "web-test-runner.performance.mjs"],
      "dependencies": ["build"],
      "output": []
    },
    "_test:api": {
      "command": "bp api --test",
      "dependencies": ["build"],
      "files": ["./src/**/*", "./package.json"],
      "output": []
    },
    "api:update": {
      "command": "bp api --update",
      "dependencies": ["build"]
    },
    "sourcemap": {
      "command": "npx source-map-explorer ./**/*.js",
      "dependencies": ["build"]
    },
    "publish": {
      "command": "cd ./dist/lib && npm publish --access public",
      "dependencies": ["ci"]
    },
    "deploy": {
      "command": "firebase deploy --only hosting:blueprintui-icons",
      "dependencies": ["ci"]
    }
  },
  "files": [
    "*"
  ],
  "sideEffects": [
    "./include/*.js"
  ],
  "exports": {
    "./custom-elements.json": "./custom-elements.json",
    "./include/*": "./include/*",
    ".": "./index.js",
    "./*": "./*/index.js"
  }
}