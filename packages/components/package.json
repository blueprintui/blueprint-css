{
  "name": "@blueprintui/components-project",
  "version": "0.0.0",
  "main": "./index.js",
  "module": "./index.js",
  "typings": "./index.d.ts",
  "type": "module",
  "customElements": "./custom-elements.json",
  "license": "MIT",
  "author": "Crylan Software",
  "homepage": "https://blueprintui.dev",
  "description": "Web Component Library for building user interfaces",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blueprintui/blueprintui.git"
  },
  "bugs": {
    "url": "https://github.com/blueprintui/blueprintui/issues"
  },
  "keywords": [
    "web component",
    "design system",
    "ui"
  ],
  "files": [
    "*"
  ],
  "sideEffects": [
    "./include/*.js"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./custom-elements.json": "./custom-elements.json",
    ".": "./index.js",
    "./icons/*": "./icons/*",
    "./include/*": "./include/*",
    "./internals": "./internals/index.js",
    "./integration/*": "./integration/*",
    "./*": "./*/index.js"
  },
  "scripts": {
    "ci": "wireit",
    "start": "wireit",
    "build": "wireit",
    "build:watch": "wireit",
    "drafter": "wireit",
    "drafter:watch": "wireit",
    "lint:elements": "wireit",
    "test": "wireit",
    "test:watch": "wtr --watch",
    "test:unit": "wireit",
    "test:coverage": "wireit",
    "test:a11y": "wireit",
    "test:performance": "wireit",
    "test:visual": "wireit",
    "test:visual:update": "wireit",
    "test:api": "wireit",
    "test:api:update": "wireit",
    "publish": "wireit",
    "types": "wireit"
  },
  "wireit": {
    "ci": {
      "dependencies": [
        "build",
        "types",
        "drafter",
        "test",
        "test:performance"
      ]
    },
    "start": {
      "dependencies": [
        "build:watch",
        "drafter:watch"
      ]
    },
    "build": {
      "command": "bp build && cpy package.lib.json ./dist/lib --rename package.json",
      "dependencies": [
        "../themes:build",
        "../layout:build",
        "../typography:build",
        "../typewriter:build",
        "../icons:build"
      ],
      "files": [
        "./src/**/*",
        "!./src/**/*.spec.ts",
        "!./src/**/*.performance.ts",
        "!./src/**/*.visual.ts",
        "./blueprint.config.js",
        "./package.lib.json",
        "./package.json"
      ],
      "output": [
        "./dist/lib"
      ]
    },
    "build:watch": {
      "command": "bp build --watch",
      "service": true,
      "dependencies": [
        "build"
      ]
    },
    "drafter": {
      "command": "drafter build",
      "files": [
        "./src/**/*",
        "./blueprint.config.js"
      ],
      "output": [
        "./dist/drafter"
      ],
      "dependencies": [
        "build"
      ]
    },
    "drafter:watch": {
      "command": "drafter build --watch",
      "service": true,
      "dependencies": [
        "build"
      ]
    },
    "lint:elements": {
      "command": "lit-analyzer ./src"
    },
    "test": {
      "dependencies": [
        "test:api",
        "test:unit",
        "test:visual"
      ]
    },
    "test:unit": {
      "command": "del ./dist/coverage && wtr",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*",
        "!./src/**/*.performance.ts",
        "!./src/**/*.visual.ts",
        "!./src/**/*.examples.js",
        "./web-dev-server.config.mjs",
        "./web-test-runner.config.mjs"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "del ./dist/coverage && wtr --coverage",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*",
        "!./src/**/*.spec.ts",
        "!./src/**/*.examples.js",
        "./web-dev-server.config.mjs",
        "./web-test-runner.config.mjs",
        "./web-test-runner.performance.mjs"
      ],
      "output": [
        "./dist/coverage"
      ]
    },
    "test:a11y": {
      "command": "wtr --config ./web-test-runner.a11y.mjs",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*",
        "./web-dev-server.config.mjs",
        "./web-test-runner.config.mjs"
      ],
      "output": []
    },
    "test:performance": {
      "command": "wtr --config ./web-test-runner.performance.mjs",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*",
        "!./src/**/*.spec.ts",
        "!./src/**/*.examples.js",
        "./web-dev-server.config.mjs",
        "./web-test-runner.config.mjs",
        "./web-test-runner.performance.mjs"
      ],
      "output": []
    },
    "test:visual": {
      "command": "web-test-runner --config ./web-test-runner.visual.mjs",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*",
        "!./src/**/*.spec.ts",
        "./web-dev-server.config.mjs",
        "./web-test-runner.visual.mjs"
      ],
      "output": []
    },
    "test:visual:update": {
      "command": "web-test-runner --update-visual-baseline --config ./web-test-runner.visual.mjs",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*",
        "!./src/**/*.spec.ts",
        "./web-dev-server.config.mjs",
        "./web-test-runner.visual.mjs"
      ],
      "output": [
        "screenshots/Chromium/baseline/**/*.png"
      ]
    },
    "test:api": {
      "command": "bp api --test",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*"
      ],
      "output": []
    },
    "test:api:update": {
      "command": "bp api --update",
      "dependencies": [
        "build"
      ]
    },
    "publish": {
      "command": "cd ./dist/lib && npm publish --access public",
      "dependencies": [
        "ci"
      ]
    },
    "types": {
      "command": "node types.js",
      "dependencies": [
        "build"
      ]
    }
  }
}
