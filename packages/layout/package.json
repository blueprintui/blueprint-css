{
  "name": "@blueprintui/layout-project",
  "version": "0.0.0",
  "main": "index.css",
  "type": "module",
  "license": "MIT",
  "author": "Crylan Software",
  "homepage": "https://blueprintui.dev",
  "description": "CSS Layout Utilities for BlueprintUI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blueprintui/blueprintui.git"
  },
  "bugs": {
    "url": "https://github.com/blueprintui/blueprintui/issues"
  },
  "scripts": {
    "start": "wireit",
    "ci": "wireit",
    "build": "wireit",
    "build:watch": "wireit",
    "test": "wireit",
    "test:visual": "wireit",
    "test:visual:update": "wireit",
    "drafter": "wireit",
    "drafter:watch": "wireit",
    "publish": "wireit",
    "css": "node ./build.js"
  },
  "wireit": {
    "ci": {
      "dependencies": [
        "build",
        "test",
        "drafter"
      ]
    },
    "start": {
      "dependencies": [
        "build:watch",
        "drafter:watch"
      ]
    },
    "build": {
      "command": "node ./build.js",
      "dependencies": [
        "../themes:build"
      ],
      "files": [
        "./src/**/*",
        "./build.js",
        "./package.json",
        "./README.md",
        "./LICENSE"
      ],
      "output": [
        "./dist/lib"
      ]
    },
    "build:watch": {
      "command": "node --watch ./build.js",
      "service": true
    },
    "test": {
      "dependencies": [
        "test:visual"
      ]
    },
    "test:performance": {
      "command": "wtr --config ./web-test-runner.performance.mjs",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*"
      ],
      "output": []
    },
    "test:visual": {
      "command": "web-test-runner --config ./web-test-runner.visual.mjs",
      "dependencies": [
        "build",
        "../components:build"
      ],
      "files": [
        "./src/**/*",
        "./web-dev-server.config.mjs",
        "./web-test-runner.visual.mjs"
      ],
      "output": []
    },
    "test:visual:update": {
      "command": "web-test-runner --update-visual-baseline --config ./web-test-runner.visual.mjs",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*",
        "./web-dev-server.config.mjs",
        "./web-test-runner.visual.mjs"
      ],
      "output": [
        "screenshots/Chromium/baseline/**/*.png"
      ]
    },
    "drafter": {
      "command": "drafter build --config ./blueprint.config.js",
      "dependencies": [
        "build"
      ],
      "files": [
        "./src/**/*"
      ],
      "output": [
        "./dist/examples"
      ]
    },
    "drafter:watch": {
      "command": "drafter build --watch --config ./blueprint.config.js",
      "dependencies": [
        "build"
      ],
      "service": true
    },
    "publish": {
      "command": "cd ./dist/lib && npm publish --access public",
      "dependencies": [
        "build"
      ]
    }
  }
}
