{
  "name": "@blueprintui/docs",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "ci": "wireit",
    "start": "wireit",
    "build": "wireit",
    "build:11ty": "wireit",
    "start:rollup": "wireit",
    "deploy": "wireit"
  },
  "wireit": {
    "ci": {
      "dependencies": [
        "build"
      ]
    },
    "start": {
      "command": "npm run build:11ty --watch",
      "service": true,
      "dependencies": [
        "build",
        "start:rollup"
      ],
      "env": {
        "WIREIT_LOGGER": "metrics"
      }
    },
    "build": {
      "command": "rollup -c",
      "dependencies": [
        "build:11ty"
      ],
      "files": [
        "./src/**/*",
        "./eleventy.config.js",
        "./.eleventyignore",
        "./rollup.config.mjs",
        "./rollup-import-assert.mjs"
      ],
      "output": [
        "./dist"
      ]
    },
    "build:11ty": {
      "command": "npx @11ty/eleventy",
      "files": [
        "./src/**/*",
        "./eleventy.config.js",
        "./.eleventyignore",
        "./rollup.config.mjs",
        "./rollup-import-assert.mjs"
      ],
      "output": [
        "./_site"
      ],
      "dependencies": [
        "../packages/components:drafter",
        "../packages/crane:drafter",
        "../packages/icons:drafter",
        "../packages/grid:drafter",
        "../packages/typography:drafter",
        "../packages/typewriter:drafter"
      ]
    },
    "start:rollup": {
      "command": "rollup -c -w",
      "dependencies": [],
      "service": true
    },
    "deploy": {
      "command": "firebase deploy --only hosting:blueprintui",
      "dependencies": [
        "ci"
      ]
    }
  },
  "homepage": "https://blueprintui.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueprintui/components",
    "https": "https://github.com/blueprintui/components.git"
  },
  "author": "Crylan Software",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blueprintui/components/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "3.0.0-alpha.3",
    "@11ty/eleventy-plugin-syntaxhighlight": "5.0.0",
    "@rollup/plugin-alias": "5.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "acorn-import-attributes": "1.9.2",
    "html-minifier": "4.0.0",
    "markdown-it": "14.0.0",
    "rollup": "4.11.0",
    "rollup-plugin-browsersync": "1.3.3",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-import-assert": "3.0.1",
    "rollup-plugin-styles": "4.0.0",
    "terser": "5.27.1"
  }
}
