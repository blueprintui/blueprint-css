{
  "name": "@blueprintui/docs",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ci": "wireit",
    "start": "wireit",
    "build": "wireit",
    "build:11ty": "wireit",
    "start:rollup": "wireit",
    "debug": "wireit",
    "deploy": "wireit"
  },
  "wireit": {
    "ci": {
      "dependencies": [
        "build"
      ]
    },
    "start": {
      "command": "npm run build:11ty --watch",
      "dependencies": [
        "build",
        "start:rollup"
      ]
    },
    "build": {
      "command": "rollup -c",
      "dependencies": [
        "build:11ty"
      ],
      "files": [
        "./src/**/*",
        "./eleventy.config.js",
        "./.eleventyignore",
        "./rollup.config.mjs",
        "./rollup-import-assert.mjs"
      ],
      "output": [
        "./dist"
      ]
    },
    "build:11ty": {
      "command": "NODE_ENV=production node -r esm ../node_modules/.bin/eleventy",
      "files": [
        "./src/**/*",
        "./eleventy.config.js",
        "./.eleventyignore",
        "./rollup.config.mjs",
        "./rollup-import-assert.mjs"
      ],
      "output": [
        "./_site"
      ],
      "dependencies": [
        "../packages/components:drafter",
        "../packages/icons:drafter",
        "../packages/grid:drafter",
        "../packages/typography:drafter"
      ]
    },
    "start:rollup": {
      "command": "rollup -c -w",
      "dependencies": [
        "build"
      ],
      "service": true
    },
    "debug": {
      "command": "DEBUG=* node -r esm node_modules/.bin/eleventy"
    },
    "deploy": {
      "command": "firebase deploy --only hosting:blueprintui",
      "dependencies": [
        "ci"
      ]
    }
  },
  "homepage": "https://blueprintui.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueprintui/components",
    "https": "https://github.com/blueprintui/components.git"
  },
  "author": "Crylan Software",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blueprintui/components/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "2.0.0-canary.18",
    "@11ty/eleventy-plugin-syntaxhighlight": "4.2.0",
    "@rollup/plugin-alias": "4.0.3",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-terser": "0.4.0",
    "acorn-import-assertions": "1.8.0",
    "cross-env": "7.0.3",
    "decache": "4.6.1",
    "esm": "3.2.25",
    "html-minifier": "4.0.0",
    "markdown-it": "13.0.1",
    "rollup": "3.15.0",
    "rollup-plugin-import-assert": "2.1.3",
    "rollup-plugin-browsersync": "1.3.3",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-styles": "4.0.0",
    "terser": "5.16.3"
  }
}
