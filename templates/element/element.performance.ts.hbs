import { testBundleSize, testRenderTime, html } from 'web-test-runner-performance/browser.js';
import '@blueprintui/components/include/{{name}}.js';

describe('bp-{{name}} performance', () => {
  const element = html`<bp-{{name}}></bp-{{name}}>`;

  it(`should bundle and treeshake under 7kb`, async () => {
    expect((await testBundleSize('@blueprintui/components/include/{{name}}.js', { optimize: true })).kb).toBeLessThan(7);
  });

  it(`should render under 20ms`, async () => {
    expect((await testRenderTime(element)).duration).toBeLessThan(20);
  });
});
